{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ES2020"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist-types"
  },
  "include": ["vite.config.ts"]
}
